{
  "name": "theforgesmith-starter",
  "description": "Starter for bootstraping our websites",
  "version": "1.0.0",
  "author": "theforgesmith",
  "dependencies": {
    "bootstrap": "4.4.1",
    "gatsby": "2.18.8",
    "gatsby-image": "2.2.34",
    "gatsby-link": "2.2.25",
    "gatsby-plugin-catch-links": "2.1.19",
    "gatsby-plugin-feed": "2.3.23",
    "gatsby-plugin-google-analytics": "2.1.29",
    "gatsby-plugin-netlify": "2.1.28",
    "gatsby-plugin-nprogress": "2.1.15",
    "gatsby-plugin-offline": "3.0.27",
    "gatsby-plugin-preact": "3.1.22",
    "gatsby-plugin-react-helmet": "3.1.16",
    "gatsby-plugin-react-svg": "2.1.2",
    "gatsby-plugin-remove-trailing-slashes": "2.1.15",
    "gatsby-plugin-sass": "^2.1.0",
    "gatsby-plugin-sharp": "2.3.5",
    "gatsby-plugin-sitemap": "2.2.22",
    "gatsby-plugin-twitter": "2.1.15",
    "gatsby-remark-copy-linked-files": "2.1.31",
    "gatsby-remark-images": "3.1.35",
    "gatsby-remark-prismjs": "3.3.25",
    "gatsby-remark-responsive-iframe": "2.2.28",
    "gatsby-remark-smartypants": "2.1.17",
    "gatsby-source-filesystem": "2.1.40",
    "gatsby-transformer-json": "2.2.20",
    "gatsby-transformer-remark": "2.6.39",
    "gatsby-transformer-sharp": "2.3.7",
    "lodash": "4.17.15",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-helmet": "5.2.1"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "eslint": "6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.17.0",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "modern-normalize": "0.5.0",
    "node-sass": "4.13.0",
    "prettier": "1.19.1",
    "textlint": "11.5.0",
    "textlint-rule-preset-ja-spacing": "2.0.1",
    "textlint-rule-preset-japanese": "4.0.4"
  },
  "keywords": [
    "gatsby",
    "bootstrap",
    "starter"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "npm run lint:textfix",
      "git add"
    ]
  },
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "deploy": "gatsby build --prefix-paths && gh-pages -d public",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.+(js|json|md)\"",
    "lint": "eslint --ext .js,.jsx --ignore-pattern public .",
    "lint:text": "textlint src/pages/**/index.md",
    "lint:textfix": "textlint --fix src/pages/**/index.md",
    "test": "prettier --write \"**/*.+(js|jsx|json|css|scss)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
